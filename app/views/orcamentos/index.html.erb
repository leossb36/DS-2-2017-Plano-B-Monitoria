<div class="container-fluid" style="margin-left: 13%;">
  <div id="list" class="x_panel slide-in-blurred-top" style="background-color: white; width: 70%;">

    <div class="card-header" style="text-align: center">
      <h1 style="font-size:150%">Orçamentos</h1>
    </div>

    <div class="card">
      <div class="card-block" style="margin: 2%; text-align: right;">
        <table>
        <p id="notice"><%= notice %></p>
        <table>
          <thead>
            <tr>
              <th>Cidade</th>
              <th>Preço</th>
              <th>Contratado</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @orcamentos.each do |orcamento| %>
            <tr>
              <td><%= orcamento.cidade %></td>
              <td><%= orcamento.preço %></td>
              <td><%= orcamento.contratado %></td>
              <td><%= link_to 'Detalhes', orcamento, class: "btn btn-primary btn-sm" %></td>
              <td><%= link_to 'Editar', edit_orcamento_path(orcamento), class: "btn btn-info btn-sm" %></td>
              <td><%= link_to 'Excluir', orcamento, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to 'Novo Orçamento', new_orcamento_path , class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
