<div class="container-fluid">
  <div class="row mt-10 justify-content-center">
    <div class="mx-auto my-auto text-center col-md-6">
      <div class="card bg-light border-secondary mb-4 z-depth-2 slide-in-blurred-top">
        <div class="card-header">
          <h3><strong>Orçamento</strong></h3>
        </div>
        <div class="x_panel slide-in-blurred-top" style="background-color: white">  
          <div class="card-body">
            <p id="notice"><%= notice %></p>
          </div>
          <div class="card">
            <p><strong>Cidade:</strong><%= @orcamento.cidade %></p>
            <p><strong>Preço:</strong><%= @orcamento.preco %></p>
          </div>
          <div class="row justify-content-center">
            <div class="col-md-4">
              <%= button_to 'Edit', edit_orcamento_path(@orcamento), method: :get, class:'btn planob-button-edit' %>
            </div>
            <div class="col-md-4">
              <%= button_to 'Delete', @orcamento, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn planob-button-destroy' %> 
            </div>
            <div class="col-md-4">
              <%= button_to 'back', orcamentos_path, method: :get, class: 'btn planob-button-back' %> 
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>


