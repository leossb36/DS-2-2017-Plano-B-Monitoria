<div class="container-fluid">
  <div class="row mt-10 justify-content-center">
    <div class="col-md-6 text-center">
      <div class="card bg-light border-secondary mb-4 z-depth-2 slide-in-blurred-top">
        <div class="card-header">
          <h1 style="font-size:150%; ">Information</h1>
        </div>
          <p id="notice"><%= notice %></p>

          <table>
            <thead>
              <tr>
                <th>Texto</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @infos.each do |info| %>
                <tr>
                  <td><%= info.texto %></td>
                  <td><%= button_to 'Show', info, method: :get, class: 'btn planob-button-show' %></td>
                  <td><%= button_to 'Edit', edit_info_path(infos), method: :get, class: 'btn planob-button-edit' %></td>
                  
                  <td><%= button_to 'Destroy', info, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <% if current_user.blank?%>
          <p> </p>

          <% elsif current_user.is_admin?%>
          <div id="bottomButton" style="margin-bottom:2%; margin-top:5%;">
            <%= button_to 'Nova Info', new_info_path, method: :get, class: 'btn btn-primary', id: ''%>
          </div>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>


