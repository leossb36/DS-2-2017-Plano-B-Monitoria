<div class="container-fluid">
  <div class="row mt-10 justify-content-center">
    <div class="mx-auto my-auto text-center col-md-6">
      <div class="card bg-light border-secondary mb-4 z-depth-2 slide-in-blurred-top">
        <div class="card-header">
          <h3><strong><%= @info.titulo %></strong></h3>
        </div>
        <div class="x_panel slide-in-blurred-top" style="background-color: white">
          <div id="backServices">
            <h4><%= @info.id %></h4>
            <%= render 'form', info: @info %>
            <div class="row justify-content-center" id="buttonEdit">
              <div class="col-md-4">
                <%= button_to 'Show', @info, method: :get, class:'btn planob-button-show' %>
              </div>
              <div class="col-md-4">
                <%= button_to 'Back', infos_path, method: :get,  class:'planob-button-back' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>




