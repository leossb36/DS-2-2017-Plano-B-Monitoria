<div class="container-fluid">
  <div class="row mt-10 justify-content-center">
    <div class="mx-auto my-auto text-center col-md-6">
      <div class="card bg-light border-secondary mb-4 z-depth-2 slide-in-blurred-top">
        <div class="card-header">
          <h3><strong><%= @info.titulo %></strong></h3>
        </div>
        <div class="x_panel slide-in-blurred-top" style="background-color: white; text-align: left; padding-left: 60px; padding-top: 3%;">
          <div id="backServices">
            <%= render 'form', info: @info %>
            <div class="row justify-content-center" id="buttonEdit" style="padding-bottom:20px; padding-left: 50%;">
              <div class="col-md-4">
                <%= button_to 'Visualizar', @info, method: :get, class:'btn btn-warning' %>
              </div>
              <div class="col-md-4">
                <%= button_to 'Voltar', infos_path, method: :get,  class:'btn btn-secundary' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>




