<div class="container-fluid">
  <div class="row mt-10 justify-content-center">
    <div class="mx-auto my-auto text-center col-md-6">
      <div class="card bg-light border-secondary mb-4 z-depth-2 slide-in-blurred-top">
        <div class="card-header">
          <h3><strong><%= @servico.nome %></strong></h3>
        </div>
        <div class="x_panel slide-in-blurred-top" style="background-color: white">
          <div id="backServices">
            <h4><%= @servico.id %></h4>
            <%= render 'form', servico: @servico %>
            <div class="row justify-content-center" id="buttonEdit">
              <div class="col-md-4">
                <%= button_to 'Show', @servico, method: :get, class:'btn planob-button-show' %>
              </div>
              <div class="col-md-4">
                <%= button_to 'Back', servicos_path, method: :get,  class:'planob-button-back' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


