<div class="container-fluid">
  <div class="row mt-10 justify-content-center">
    <div class="mx-auto my-auto text-center col-md-6">
      <div class="card bg-light border-secondary mb-4 z-depth-2 slide-in-blurred-top">
        <div class="card-header">
          <h3><strong><%= @servico.nome %></strong></h3>
        </div>
        <div class="x_panel slide-in-blurred-top" style="background-color: white">
          <div id="backStyle" style="margin-top: 5%;">
            <%= render 'form', servico: @servico %>
            <br />
            <div class="row justify-content-center" style="margin-left: -175px; margin-bottom: -20px;">
              <div class="col-md-4">
                <%= button_to 'Visualizar', @servico, method: :get, class:'btn btn-info' %>
              </div>
              <div class="col-md-4" style="margin-left: -90px;">
                <%= button_to 'Voltar', servicos_path, method: :get,  class:'btn btn-secundary' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
